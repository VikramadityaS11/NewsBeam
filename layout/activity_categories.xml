<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Categories">

    <com.google.android.material.chip.ChipGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:singleSelection="false"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:chipSpacingHorizontal="8dp"
    app:chipSpacingVertical="8dp">

    <!-- Business Filter Chip -->
    <com.google.android.material.chip.Chip
        style="@style/Widget.MaterialComponents.Chip.Choice"
        android:id="@+id/chip_business"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Business"
        android:checkable="true"
        app:chipBackgroundColor="@android:color/white"
        android:textColor="#424242"
        app:checkedIconVisible="true" />

    <!-- Technology Filter Chip -->
    <com.google.android.material.chip.Chip
        style="@style/Widget.MaterialComponents.Chip.Choice"
        android:id="@+id/chip_technology"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Technology"
        android:checkable="true"
        app:chipBackgroundColor="@android:color/white"
        android:textColor="#424242"
        app:checkedIconVisible="true" />

    <!-- Health Filter Chip -->
    <com.google.android.material.chip.Chip
        style="@style/Widget.MaterialComponents.Chip.Choice"
        android:id="@+id/chip_health"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Health"
        android:checkable="true"
        app:chipBackgroundColor="@android:color/white"
        android:textColor="#424242"
        app:checkedIconVisible="true" />

    <!-- Science Filter Chip -->
    <com.google.android.material.chip.Chip
        style="@style/Widget.MaterialComponents.Chip.Choice"
        android:id="@+id/chip_science"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Science"
        android:checkable="true"
        app:chipBackgroundColor="@android:color/white"
        android:textColor="#424242"
        app:checkedIconVisible="true" />

    <!-- Bollywood Filter Chip -->
    <com.google.android.material.chip.Chip
        style="@style/Widget.MaterialComponents.Chip.Choice"
        android:id="@+id/chip_bollywood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bollywood"
        android:checkable="true"
        app:chipBackgroundColor="@android:color/white"
        android:textColor="#424242"
        app:checkedIconVisible="true" />



    <!-- Sports Filter Chip -->
    <com.google.android.material.chip.Chip
        style="@style/Widget.MaterialComponents.Chip.Choice"
        android:id="@+id/chip_sports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sports"
        android:checkable="true"
        app:chipBackgroundColor="@android:color/white"
        android:textColor="#424242"
        app:checkedIconVisible="true" />

    <!-- Entertainment Filter Chip -->
    <com.google.android.material.chip.Chip
        style="@style/Widget.MaterialComponents.Chip.Choice"
        android:id="@+id/chip_entertainment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entertainment"
        android:checkable="true"
        app:chipBackgroundColor="@android:color/white"
        android:textColor="#424242"
        app:checkedIconVisible="true" />

    <!-- Politics Filter Chip -->
    <com.google.android.material.chip.Chip
        style="@style/Widget.MaterialComponents.Chip.Choice"
        android:id="@+id/chip_politics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Politics"
        android:checkable="true"
        app:chipBackgroundColor="@android:color/white"
        android:textColor="#424242"
        app:checkedIconVisible="true" />

    <!-- World Filter Chip -->
    <com.google.android.material.chip.Chip
        style="@style/Widget.MaterialComponents.Chip.Choice"
        android:id="@+id/chip_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
